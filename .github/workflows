name: üåä Beach Forecast

on:
  # Runs Mon, Wed, Fri at 2am UTC (10am Perth AWST)
  schedule:
    - cron: '0 2 * * 1,3,5'
  
  # Manual trigger
  workflow_dispatch:
  
  # Also run on push to update dashboard
  push:
    branches: [main]
    paths:
      - 'snorkel_alert.py'
      - 'config.json'

# Permissions for GitHub Pages
permissions:
  contents: write
  pages: write
  id-token: write

jobs:
  forecast:
    runs-on: ubuntu-latest
    
    steps:
      - name: üì• Checkout
        uses: actions/checkout@v4
      
      - name: üêç Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'
      
      - name: üì¶ Install dependencies
        run: pip install anthropic requests
      
      - name: üåä Generate forecast
        env:
          ANTHROPIC_API_KEY: ${{ secrets.ANTHROPIC_API_KEY }}
          PUSHOVER_USER_KEY: ${{ secrets.PUSHOVER_USER_KEY }}
          PUSHOVER_API_TOKEN: ${{ secrets.PUSHOVER_API_TOKEN }}
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_CHAT_IDS: ${{ secrets.TELEGRAM_CHAT_IDS }}
          EMAIL_ADDRESS: ${{ secrets.EMAIL_ADDRESS }}
          EMAIL_PASSWORD: ${{ secrets.EMAIL_PASSWORD }}
          EMAIL_RECIPIENTS: ${{ secrets.EMAIL_RECIPIENTS }}
          ENABLE_PUSHOVER: ${{ vars.ENABLE_PUSHOVER }}
          ENABLE_TELEGRAM: ${{ vars.ENABLE_TELEGRAM }}
          ENABLE_EMAIL: ${{ vars.ENABLE_EMAIL }}
        run: python snorkel_alert.py
      
      - name: üì§ Commit dashboard
        run: |
          git config --local user.email "action@github.com"
          git config --local user.name "GitHub Action"
          git add docs/
          git diff --staged --quiet || git commit -m "üåä Update forecast $(date +'%Y-%m-%d %H:%M')"
          git push
      
      - name: üöÄ Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./docs
